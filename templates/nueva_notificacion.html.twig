{% extends 'menus.html.twig' %}
{% block title %}Interoleo gestión | Nueva notificación{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/css/materialize.min.css">

{% endblock %}
{% block content %}
    <h3 class="page-title">
        Nueva notificación <small>Interoleo gestión</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/">Inicio</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/nueva_notificacion">Nueva notificación</a>
            </li>
        </ul>
    </div>
        <!-- END SAMPLE FORM PORTLET-->
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-red-sunglo">
                    <i class="icon-user font-red-sunglo"></i>
                    <span class="caption-subject bold uppercase"> NUEVA NOTIFICACIÓN </span>
                </div>

            </div>
            <div class="portlet-body form">
                <form role="form" action="/" method="POST">
                    <div class="form-group form-md-line-input has-info">
                        <select class="form-control" id="form_control_14" name="contrato">
                            {% for contrato in contratos %}
                                <option value="{{ contrato['id'] }}"> {{ contrato['boletin'] }}</option>
                            {% endfor %}
                        </select>
                        <label for="form_control_1">Boletín</label>
                    </div>

                    <div class="form-group form-md-line-input has-info">
                        <select class="form-control" id="form_control_14" name="socio">
                            <option>- Seleccione un contrato -</option>
                        </select>
                        <label for="form_control_2">Socio</label>
                    </div>

                    <div class="form-group form-md-line-input">
                        <input class="form-control" id="form_control_2" type="text" name="cisternas" maxlength="45" required="required">
                        <label for="form_control_2">Cisternas</label>
                    </div>

                    <div class="form-group form-md-line-input has-info">
                        <select class="form-control" id="form_control_14" name="estado">
                            <option value="Pendiente">Pendiente</option>
                            <option value="Pagado">Pagado</option>
                            <option value="Finalizado">Finalizado</option>
                            <option value="Incidencia">Incidencia</option>
                        </select>
                        <label for="form_control_2">Estado</label>
                    </div>

                    <div class="form-group form-md-line-input">
                        <textarea class="form-control" name="observaciones" rows="3" placeholder="Escribe aquí las observaciones..."></textarea>
                        <label for="form_control_1">Observaciones</label>
                    </div>                

                    <button type="submit" name="botonCreaNotificacion" class="btn blue"><span class="md-click-circle md-click-animate"></span>Crear</button>
                    <a href="/" class="btn default">Cancelar</a>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>

{% endblock %}
{% block scripts %}

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.datepicker').datepicker({
                format: 'mm-dd-yyyy'
            });

            $('.datepicker').pickadate({
                selectMonths: true, // Creates a dropdown to control month
                selectYears: 15 // Creates a dropdown of 15 years to control year
            });
        });
    </script>
{% endblock %}